<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llv0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1920"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/llh0_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150"
        android:weightSum="1080" >

        <RadioGroup
            android:id="@+id/sizerg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/sizerb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小杯"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/sizerb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中杯"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/sizerb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="大杯"
                android:textSize="10sp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llh0_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150"
        android:weightSum="1080" >

        <RadioGroup
            android:id="@+id/sugarrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/sugarrb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="無糖"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/sugarrb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三分糖"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/sugarrb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="半糖"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/sugarrb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="七分糖"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/sugarrb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:checked="true"
                android:textSize="10sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llh0_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150"
        android:weightSum="1080" >

        <RadioGroup
            android:id="@+id/icerg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/icerb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="熱飲"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/icerb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="溫飲"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/icerb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去冰"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/icerb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="半冰"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/icerb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:checked="true"
                android:textSize="10sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llh0_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="800"
        android:weightSum="1080" >

        <LinearLayout
            android:id="@+id/llv0_4_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="540"
            android:orientation="vertical"
			android:weightSum="800" >

            <Button
                android:id="@+id/cafebtn1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:text="美式咖啡" />

            <Button
                android:id="@+id/cafebtn2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:text="招牌咖啡" />

            <Button
                android:id="@+id/cafebtn3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:text="海岩咖啡" />

            <Button
                android:id="@+id/cafebtn4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:text="拿鐵咖啡" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llv0_4_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="540"
            android:orientation="vertical"
			android:weightSum="800" >

            <Button
                android:id="@+id/cafebtn5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:text="義式咖啡" />

            <Button
                android:id="@+id/cafebtn6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:text="卡布奇諾" />

            <Button
                android:id="@+id/cafebtn7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:text="焦糖瑪奇朵" />

            <Button
                android:id="@+id/cafebtn8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:text="北海道醇濃奶茶" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llh0_5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="520"
        android:background="#00FFFF"
        android:weightSum="1080" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

	            <TextView
	                android:id="@+id/tv_order"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text=""
	                android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llh0_6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150"
        android:weightSum="1080" >

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0 / 0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#FFFF00"
            android:textColor="#FF0000" />

    </LinearLayout>

</LinearLayout>